<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/comimg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>

    <TextView
        android:id="@+id/uuname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/comimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username" />

    <TextView
        android:id="@+id/uudate"
        android:layout_toRightOf="@+id/comimg"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/uuname"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="userdate" />

    <TextView
        android:id="@+id/uucomt"
        android:layout_below="@+id/comimg"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/comimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pag2" />

</RelativeLayout>