<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/register_bk_color"
    android:layout_height="match_parent"
    tools:context=".Form5Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/register_bk_color"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_marginTop="50dp"
        android:id="@+id/screenview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/register_bk_color"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    style="@style/viewParent.headerText.NoMode"
                    android:text="Section 3 Exposure and travel information "/>

            </RelativeLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/logo2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Occupation tick any that apply"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student" />

                        <CheckBox
                            android:id="@+id/healthwrk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health Worker" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/wrkanimals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Working with animals" />


                    <CheckBox
                        android:id="@+id/healthlab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health laboratory worker" />


                    <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                        <EditText
                            android:id="@+id/otherspecify"
                            style="@style/modifiedEditText"
                            android:hint="Others Specify"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="15dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <Spinner
                            android:id="@+id/travehis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/travelhis" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="3"
                        android:background="@color/register_bk_color" />



                    <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                        <EditText
                            android:id="@+id/spcplacencity"
                            style="@style/modifiedEditText"
                            android:hint="IF Yes! Enter Country and City eg. Ghana - Accra"
                            android:inputType="date"
                            android:maxLines="5"
                            android:textSize="15dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <Spinner
                            android:id="@+id/haspavisi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/pvisited" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="3"
                        android:background="@color/register_bk_color" />


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <Spinner
                            android:id="@+id/conatctt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/conactprio" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="3"
                        android:background="@color/register_bk_color" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If Yes contact setting, (check all that apply)"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <CheckBox
                        android:id="@+id/homesett"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Settings" />


                    <CheckBox
                        android:id="@+id/healthcaresett"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family Settings" />


                    <CheckBox
                        android:id="@+id/wrkplace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workplace" />


                    <CheckBox
                        android:id="@+id/unknw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unknown" />


                    <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                        <EditText
                            android:id="@+id/contcsetting"
                            style="@style/modifiedEditText"
                            android:hint="Others Specify"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="15dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <Spinner
                            android:id="@+id/contprob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/contprob" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="3"
                        android:background="@color/register_bk_color" />



                    <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                        <EditText
                            android:id="@+id/contactyes"
                            style="@style/modifiedEditText"
                            android:hint="If Yes list unique case identifiers of all cases type"
                            android:inputType="date"
                            android:maxLines="5"
                            android:textSize="15dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IF YES Contact Setting"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <CheckBox
                        android:id="@+id/chomesett"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Settings" />


                    <CheckBox
                        android:id="@+id/chealthcaresett"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family Settings" />


                    <CheckBox
                        android:id="@+id/cwrkplace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workplace" />


                    <CheckBox
                        android:id="@+id/cunknw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unknown" />


                    <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                        <EditText
                            android:id="@+id/ccontcsetting"
                            style="@style/modifiedEditText"
                            android:hint="Others Specify"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="15dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout style="@style/parent">

                        <EditText
                            android:id="@+id/loccofospo"
                            style="@style/modifiedEditText"
                            android:hint="If yes, location/city/country for exposure"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="15dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <Spinner
                            android:id="@+id/lieanimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/lieanimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="3"
                        android:background="@color/register_bk_color" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="90dp"
                        android:orientation="horizontal">


                        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                            android:id="@+id/cirRegisterButton"
                            style="@style/loginButton"
                            app:spinning_bar_width="4dp"
                            app:spinning_bar_color="#FFF"
                            android:text="Skip Form"
                            android:onClick="skipfomr"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            app:initialCornerAngle="27dp"
                            android:layout_marginRight="20dp"
                            app:spinning_bar_padding="6dp"/>


                        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                            android:id="@+id/cirRegisterButto"
                            style="@style/loginButton"
                            app:spinning_bar_width="4dp"
                            app:spinning_bar_color="#FFF"
                            android:text="Save and Contimnue"
                            android:onClick="SaveandContinue"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            app:initialCornerAngle="27dp"
                            app:spinning_bar_padding="6dp"/>



                    </LinearLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
