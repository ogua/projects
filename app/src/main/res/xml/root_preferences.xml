<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Personal Information">

        <EditTextPreference
            app:key="fullname"
            app:title="Fullname"
            app:useSimpleSummaryProvider="true" />



        <EditTextPreference
            app:key="email"
            app:title="Email"
            app:useSimpleSummaryProvider="true" />


        <EditTextPreference
            app:key="phonenumb"
            app:title="Phone Number"
            app:useSimpleSummaryProvider="true" />



        <EditTextPreference
            app:key="position"
            app:title="Position"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notification">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Receive Notification" />

    </PreferenceCategory>

</PreferenceScreen>
