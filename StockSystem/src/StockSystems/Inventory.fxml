<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainPane" style="-fx-background-color: abd;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StockSystems.InventoryController">
   <children>
      <HBox>
         <children>
            <MenuBar prefHeight="25.0" prefWidth="950.0">
               <menus>
                  <Menu mnemonicParsing="false" text="Add Cashier">
                     <items>
                        <MenuItem fx:id="aCash" mnemonicParsing="false" onAction="#Acash" text="Add Cashier" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Add Product">
                     <items>
                        <MenuItem fx:id="Apro" mnemonicParsing="false" onAction="#aPro" text="Add Product" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="View Cash Details">
                     <items>
                        <MenuItem fx:id="Cdetail" mnemonicParsing="false" onAction="#cdetail" text="View Cash Details" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="View Transaction">
                     <items>
                        <MenuItem fx:id="transac" mnemonicParsing="false" onAction="#Trans" text="View Transaction" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Inventory">
                     <items>
                        <MenuItem fx:id="inven" mnemonicParsing="false" onAction="#Inven" text="Inventory" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Update Stock">
                     <items>
                        <MenuItem fx:id="UpdateS" mnemonicParsing="false" onAction="#Updates" text="Update Stock" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Sales as per Product">
                     <items>
                        <MenuItem fx:id="sPerP" mnemonicParsing="false" onAction="#SperP" text="Sales as per Product" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Sales as per Day">
                     <items>
                        <MenuItem fx:id="SperD" mnemonicParsing="false" onAction="#Sperd" text="Sales as per Day" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <Button fx:id="lOut" mnemonicParsing="false" onAction="#Logout" prefHeight="25.0" prefWidth="101.0" text="Logout" />
         </children>
      </HBox>
      <AnchorPane id="AnchorPane" prefHeight="522.0" prefWidth="887.0" styleClass="mainFxmlClass">
          
         <children>
            <Label layoutX="14.0" layoutY="14.0" prefHeight="28.0" prefWidth="194.0" text="INVENTORY">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font></Label>
            <TableView fx:id="table" layoutX="320.0" layoutY="131.0" prefHeight="343.0" prefWidth="372.0">
              <columns>
                <TableColumn fx:id="pid" prefWidth="107.0" text="PRODUCT ID" />
                <TableColumn fx:id="pname" prefWidth="124.0" text="PRODUCT NAME" />
                  <TableColumn fx:id="pwty" prefWidth="143.0" text="PRODUCT QTY" />
              </columns>
            </TableView>
            <TextField fx:id="filtersearch" alignment="CENTER" layoutX="318.0" layoutY="88.0" prefHeight="30.0" prefWidth="372.0" promptText="SEARCH PRODUCT EITHER BY ID , NAME OR QUANTITY" style="-fx-background-radius: 30;">
               
            </TextField>
         </children>
      </AnchorPane>
   </children>
</VBox>
